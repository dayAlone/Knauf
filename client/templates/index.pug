- var email = user ? user.email : ''
doctype html
html
    head
        if title
            title= title.page
        meta(name='description', content='#{description}')
        meta(charset="utf-8")
        meta(name="viewport",content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1")
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="mobile-web-app-capable", content="yes")
        meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")

        include includes/social
        include includes/favicons
        script(src="https://use.typekit.net/uof6mzc.js")
        script.
            try{Typekit.load({ async: true });}catch(e){}
    body(style='opacity: 0; transition: .3s opacity', data-hotellook-campaign='patriot')
        include includes/counters

        - var login = ['facebook', 'google', 'odnoklassniki', 'twitter', 'vkontakte']
        each el in login
            a(href='/auth/'+ el + '/login/')= el
            br
        br
        a(href='/auth/logout/') Exit
        link(href='/layout/css/style.css' rel="stylesheet")
