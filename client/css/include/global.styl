@import '../../node_modules/nib/lib/nib/index'

@import '../../node_modules/reset.styl/index.styl'
use_reset('meyer')
reset()

$heading-font = 'proxima-nova', 'Helvetica Neue', 'Arial', sans-serif
$body-font = 'Bebas', 'Helvetica Neue', 'Arial', sans-serif

.hidden
    display none

html, body
    min-height: 100%

*
    box-sizing: border-box
    min-height: 0
    min-width: 0

body
    color black
    line-height 1.3
    font-family: $body-font
    font-weight 300
    opacity: 1 !important
    -webkit-font-smoothing: antialiased
    background-size cover
    transition: .3s opacity

.tp-partner-widget-wrapper
    display none !important
